<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chatbot UI</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background: url('h2.jpeg') no-repeat center center fixed;
            background-size: cover;
            font-family: Arial, sans-serif;
            color: white;
            text-align: center;
            overflow: hidden;
            position: relative;
        }
        
        .navbar {
            display: flex;
            justify-content: flex-start;
            padding: 15px 100px;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1000;
        }
        .navbar a {
            color: white;
            text-decoration: none;
            margin: 0px 20px;
            font-size: 18px;
            transition: color 0.3s ease-in-out, transform 0.3s ease-in-out;
        }
        .navbar a:hover {
            color: #058fb9;
            transform: scale(1.1);
        }
        
        .container {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            margin: 150px 130px;
            animation: fadeIn 2s ease-in-out;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        h1 {
            font-size: 70px;
            animation: textGlow 2s infinite alternate;
            margin-bottom: 2px;
        }
        
        @keyframes textGlow {
            from { text-shadow: 0 0 10px #058fb9; }
            to { text-shadow: 0 0 20px #058fb9, 0 0 30px #058fb9; }
        }
        
        p {
            font-size: 18px;
            max-width: 700px;
            margin-top: 1px;
            margin-bottom: 2px;
        }
        .buttons {
            margin-top: 20px;
        }
        .btn {
            padding: 10px 20px;
            font-size: 18px;
            border: none;
            cursor: pointer;
            margin: 5px;
            border-radius: 5px;
            transition: transform 0.3s;
        }
        .btn-login {
            background-color: transparent;
            color: #058fb9;
            border: 2px solid #058fb9;
        }
        .btn-signup {
            background-color: transparent;
            color: #058fb9;
            border: 2px solid #058fb9;
        }
        .btn-login:hover, .btn-signup:hover {
            background-color: #058fb9;
            color: white;
            transform: scale(1.1);
        }
        
        /* Background Animation: Floating Particles */
        .particles, .shapes {
            position: fixed;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            pointer-events: none;
        }
        .particle {
            position: absolute;
            width: 6px;
            height: 6px;
            background: rgba(255, 255, 255, 0.6);
            border-radius: 50%;
            opacity: 0.6;
            animation: floatParticles 6s infinite ease-in-out;
        }
        @keyframes floatParticles {
            from { transform: translateY(0px); opacity: 0.6; }
            to { transform: translateY(-100vh); opacity: 0; }
        }
        
        /* Rotating Shapes */
        .shape {
            position: absolute;
            width: 50px;
            height: 50px;
            opacity: 0.4;
            animation: rotateShape 10s linear infinite;
        }
        .square {
            background: rgba(5, 143, 185, 0.5);
        }
        .circle {
            background: rgba(255, 255, 255, 0.5);
            border-radius: 50%;
        }
        @keyframes rotateShape {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="particles"></div>
    <div class="shapes"></div>
    <div class="navbar">
        <a href="/">Home</a>
        <a href="/bot">Bot</a>
    </div>
    <div class="container">
        <h1>DICTIONBOT</h1>
        <p>An interactive chatbot designed to provide comprehensive word information, including definitions, examples, synonyms, parts of speech.</p>
        <div class="buttons">
            <button class="btn btn-login" onclick="logout()">Logout</button>
            <button class="btn btn-signup" onclick="chat()">Chat With Bot</button>
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const particlesContainer = document.querySelector(".particles");
            for (let i = 0; i < 50; i++) {
                let particle = document.createElement("div");
                particle.classList.add("particle");
                particle.style.left = Math.random() * 100 + "vw";
                particle.style.top = Math.random() * 100 + "vh";
                particle.style.animationDuration = Math.random() * 5 + 3 + "s";
                particle.style.animationDelay = Math.random() * 2 + "s";
                particlesContainer.appendChild(particle);
            }
            
            const shapesContainer = document.querySelector(".shapes");
            for (let i = 0; i < 10; i++) {
                let shape = document.createElement("div");
                shape.classList.add("shape", i % 2 === 0 ? "square" : "circle");
                shape.style.left = Math.random() * 100 + "vw";
                shape.style.top = Math.random() * 100 + "vh";
                shape.style.animationDuration = Math.random() * 10 + 5 + "s";
                shapesContainer.appendChild(shape);
            }
        });
        function logout() {
            location.href = '/';
            
        }
        function chat() {
            location.href = '/bot';
            
        }

    </script>
</body>
</html>
